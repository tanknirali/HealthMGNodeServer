<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='/css/style.css' />
    <link rel='stylesheet' href='/css/bootstrap.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css">
	<link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
  </head>
  <body>
    <div class="container">
      <div class="header clearfix">
      	<% include header %>
      </div>
	
	  <div class="row marketing">
       <div class="col-lg-6">
	   	<form method="POST" action="/users/patient">
		  <div class="form-group">
		    <label>Enter email address to give permission</label>
		    <input type="email" class="form-control" name="permissionTo" placeholder="Email address">
		  </div>
		  <button type="submit" class="btn btn-default">Give Permission</button>
		</form> 
	   </div>
	
	   <div class="col-lg-6">
	   	<form method="POST" action="/users/revoke">
		  <div class="form-group">
		    <label>Enter email address to revoke permission</label>
		    <input type="email" class="form-control" name="revoke" placeholder="Email address">
		  </div>
		  <button type="submit" class="btn btn-default">Revoke Permission</button>
		</form>
	   </div>  
      </div>
      
      <div>
        <h2>List of people you have given permission:</h2> <br>
       	<ul>
       		<% Patients.forEach(function(Patient) { %>
       			<li><%= Patient.permissionTo %> </li>
       		<% }); %>
       	</ul>      
      </div>     

      <footer class="footer">
        <% include footer %>
      </footer>

    </div> 
  </body>
</html>
